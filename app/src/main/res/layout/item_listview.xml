<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentView="@+id/content"
            app:rightMenuView="@+id/right">

            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/ll_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="帐号："
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/tv_item_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/ll_account"
                    android:layout_marginTop="8dp"
                    android:ellipsize="none"
                    android:inputType="textMultiLine|textPassword"
                    android:text="********" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/right_menu_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/color_0076FF"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="编辑"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/right_menu_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/color_FB544B"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="删除"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>